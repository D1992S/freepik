{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/stockplan.schema.json",
  "title": "StockPlan",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "project", "global", "scenes"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "language", "created_at", "notes"],
      "properties": {
        "title": { "type": "string", "minLength": 1, "maxLength": 200 },
        "language": { "type": "string", "enum": ["pl", "en", "de", "es", "fr"] },
        "created_at": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "notes": { "type": "string", "maxLength": 5000 }
      }
    },
    "global": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "asset_type",
        "orientation",
        "clips_per_scene",
        "max_candidates_per_scene",
        "min_duration_s",
        "max_duration_s",
        "min_width",
        "min_height",
        "format_preference"
      ],
      "properties": {
        "asset_type": { "const": "video" },
        "orientation": { "enum": ["landscape", "portrait", "square"] },
        "clips_per_scene": { "type": "integer", "minimum": 1, "maximum": 5 },
        "max_candidates_per_scene": { "type": "integer", "minimum": 1, "maximum": 100 },
        "min_duration_s": { "type": "number", "minimum": 1, "maximum": 120 },
        "max_duration_s": { "type": "number", "minimum": 1, "maximum": 180 },
        "min_width": { "type": "integer", "minimum": 320 },
        "min_height": { "type": "integer", "minimum": 240 },
        "format_preference": {
          "type": "array",
          "minItems": 1,
          "maxItems": 5,
          "items": { "type": "string", "minLength": 2, "maxLength": 16 },
          "uniqueItems": true
        }
      }
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 80,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "order",
          "id",
          "label",
          "slug",
          "excerpt",
          "search_queries",
          "negative_terms",
          "intent"
        ],
        "properties": {
          "order": { "type": "integer", "minimum": 1 },
          "id": { "type": "string", "pattern": "^S\\d{3}$" },
          "label": { "type": "string", "minLength": 2, "maxLength": 120 },
          "slug": { "type": "string", "pattern": "^[a-z0-9-]{1,32}$" },
          "excerpt": { "type": "string", "minLength": 20, "maxLength": 200 },
          "search_queries": {
            "type": "array",
            "minItems": 3,
            "maxItems": 14,
            "items": { "type": "string", "minLength": 2, "maxLength": 120 },
            "uniqueItems": true
          },
          "negative_terms": {
            "type": "array",
            "minItems": 3,
            "maxItems": 16,
            "items": { "type": "string", "minLength": 2, "maxLength": 120 },
            "uniqueItems": true
          },
          "intent": { "type": "string", "minLength": 5, "maxLength": 280 }
        }
      }
    }
  }
}
