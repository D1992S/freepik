{
  "name": "stockbot",
  "version": "0.1.0",
  "description": "Automated stock video downloader from Freepik",
  "type": "module",
  "main": "dist/electron/main.js",
  "bin": {
    "stockbot": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:electron": "tsc && npm run copy:assets",
    "copy:assets": "mkdir -p dist/electron/renderer && cp electron/renderer/*.html electron/renderer/*.css dist/electron/renderer/",
    "dev": "tsx src/cli.ts",
    "spike": "tsx scripts/freepik-api-spike.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "NODE_ENV=development npm run electron",
    "dist": "npm run build:electron && electron-builder --win --x64",
    "dist:dir": "npm run build:electron && electron-builder --win --x64 --dir"
  },
  "build": {
    "appId": "com.stockbot.app",
    "productName": "StockBot",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "stock-video",
    "freepik",
    "automation",
    "cli",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "commander": "^11.1.0",
    "dotenv": "^17.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
